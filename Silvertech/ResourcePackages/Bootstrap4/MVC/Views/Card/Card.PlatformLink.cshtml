@model SitefinityWebApp.Mvc.Models.CustomCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<a title="@Model.ActionTitle" href="@Html.UrlSanitize(Model.ActionUrl)" class="platform-link">

    <div class="platform-image">
        <img class="img-load-lazy"
             data-src="@Model.SelectedSizeUrl"
             data-srcset="@Model.SelectedSizeUrl 2x, @Model.SelectedSizeUrl 1x"
             alt="@Model.ImageAlternativeText"
             title="@Model.ImageTitle" />
    </div>

    <div class="arrow-right-ico">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12.336 21.842">
            <g transform="translate(-957.904 -207.039)">
                <line id="Line_59" data-name="Line 59" x1="9.507" y2="9.507" transform="translate(959.318 217.96) rotate(-90)" fill="none" stroke="#fff" stroke-linecap="round" stroke-width="2" />
                <line id="Line_60" data-name="Line 60" x2="9.507" y2="9.507" transform="translate(959.318 227.467) rotate(-90)" fill="none" stroke="#fff" stroke-linecap="round" stroke-width="2" />
            </g>
        </svg>
    </div>
</a>