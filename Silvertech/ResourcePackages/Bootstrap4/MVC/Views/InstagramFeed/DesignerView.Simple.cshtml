@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<form>
    <div class="form-group">
        <label for="heading-text">
            @Html.Resource("Heading")
        </label>
        <input id="heading-text" type="text" class="form-control" ng-model="properties.Heading.PropertyValue" />
    </div>

    <div class="form-group">
        <label for="heading2-text">
            Instagram Handle
        </label>
        <input id="heading2-text" type="text" class="form-control" ng-model="properties.ClientSpotlightHeading.PropertyValue" />
    </div>
    <div class="form-group">
        <label for="heading2-text">
            Instagram URL
        </label>
        <input id="heading2-text" type="text" class="form-control" ng-model="properties.HeadingTwo.PropertyValue" />
    </div>

    <div class="form-group">
        <label for="image-field" class="m-top-sm">Icon Image</label>
        <sf-image-field class="sf-Media--info modal-settings modal-settings-space"
                        sf-model="properties.ImageId.PropertyValue"
                        sf-image="selectedImage"
                        sf-provider="properties.ImageProviderName.PropertyValue"
                        id="image-field"
                        sf-media-settings="@SettingsHelpers.GetMediaSettings("Image")"></sf-image-field>
    </div>

    <hr class="side-to-side">

    <h5>Other Social Media Handles</h5>

    <div class="form-group">
        <label for="label-handle-text">Twitter Handle</label>
        <input id="label-handle-text" type="text" ng-model="properties.ActionName.PropertyValue" class="form-control" />
    </div>

    <div class="form-group">
        <label for="label-twitter-text">Twitter URL</label>
        <input id="label-twitter-text" type="text" ng-model="properties.ActionTarget.PropertyValue" class="form-control" />
    </div>

    <div class="form-group">
        <label for="label-handle-text">Facebook Handle</label>
        <input id="label-handle-text" type="text" ng-model="properties.ActionTwoName.PropertyValue" class="form-control" />
    </div>

    <div class="form-group">
        <label for="label-facebook-text">Facebook URL</label>
        <input id="label-facebook-text" type="text" ng-model="properties.ActionTwoTarget.PropertyValue" class="form-control" />
    </div>

    <div class="form-group">
        <label for="label-handle-text">LinkedIn Handle</label>
        <input id="label-handle-text" type="text" ng-model="properties.ActionThreeName.PropertyValue" class="form-control" />
    </div>
    <div class="form-group">
        <label for="label-linkedin-text">LinkedIn URL</label>
        <input id="label-linkedin-text" type="text" ng-model="properties.ActionTitle.PropertyValue" class="form-control" />
    </div>

    <expander expander-title='@Html.Resource("MoreOptions")'>
        <div class="form-group">
            <label for="templateName">@Html.Resource("Template")</label>
            <div class="row">
                <div class="col-xs-6">
                    <select id="templateName" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                        @foreach (var viewName in Html.GetViewNames("InstagramFeed", @"(?<viewName>^InstagramFeed.*)$"))
                        {
                            <option value="@viewName"> @viewName.SplitCamelCase()</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </expander>
</form>