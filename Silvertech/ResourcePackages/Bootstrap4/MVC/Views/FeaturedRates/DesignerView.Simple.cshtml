@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;



<div class="form-group">
    <label for="label-text">
        Rate Title
    </label>
    <input id="label-text" type="text" ng-model="properties.FeaturedRateTitle.PropertyValue" class="form-control" />
</div>

<div class="form-group">
    <div>
        <label for="table">Table:</label>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <select id="table" ng-model="table" ng-options="table.Title for table in tables" class="form-control">
                <option value=''>Select</option>
            </select>
        </div>
    </div>
</div>

<div class="form-group">
    <div>
        <label for="columns">Column:</label>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <select id="columns" ng-disabled="!columns" ng-model="column" ng-options="column.Title for column in columns" class="form-control">
                <option value=''>Select</option>
            </select>
        </div>
    </div>
</div>

<div class="form-group">
    <div>
        <label for="rows">Row:</label>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <select id="rows" ng-disabled="!rows" ng-model="row" ng-options="row.Title for row in rows" class="form-control">
                <option value=''>Select</option>
            </select>
        </div>
    </div>
</div>

<div class="form-group">
    <label for="label-text">
        Link Text
    </label>
    <input id="label-text" type="text" ng-model="properties.ActionName.PropertyValue" class="form-control" />
</div>
<div class="form-group">

    <label for="label-actionTitle">
        Link ADA Title
    </label>
    <input id="label-actionTitle" type="text" ng-model="properties.ActionTitle.PropertyValue" class="form-control" />
</div>
<div class="form-group">
    <label>Linked Page: </label>

    <sf-list-selector sf-page-selector sf-multiselect="false" sf-sortable="true"
                      sf-provider="properties.ProviderName.PropertyValue"
                      sf-selected-item-id="properties.SelectedPageId.PropertyValue"
                      sf-selected-item="properties.SelectedPage.PropertyValue"></sf-list-selector>

</div>