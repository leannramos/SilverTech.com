@model SitefinityWebApp.Mvc.Models.CustomCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

@{
    var cssClass = !Model.CssClass.IsNullOrEmpty() ? Model.CssClass : "green";
}

<section class="full-height-cta image-right @cssClass" aria-label="Full Height Images with Call To Action for @Model.Heading">

    <div class="background"></div>

    <div class="content-wrapper">
        <div class="container">
            <div class="caption">

                <div class="client-logo">
                    <img src="@Model.ImageTwoUrl" alt="@Model.ImageTwoAlternativeText" title="@Model.ImageTwoTitle">
                </div>
                <h2 class="headline">@Model.Heading</h2>
                <div class="description">@Model.Description</div>

                @if (!string.IsNullOrWhiteSpace(Model.ActionName))
                {
                <div class="cta">
                    <a href="@Model.ActionUrl" target="@Model.ActionTarget" class="btn btn-quaternary" title="@Model.ActionTitle">@Model.ActionName</a>
                </div>
                }
            </div>
        </div>
    </div>

    <!-- Hero Image -->
    <div class="main-image">
        <div class="wrapper">
            <div class="image lazy-load-bg" style="background-image:url('@Model.SelectedSizeUrl');"></div>
        </div>
    </div>

</section>