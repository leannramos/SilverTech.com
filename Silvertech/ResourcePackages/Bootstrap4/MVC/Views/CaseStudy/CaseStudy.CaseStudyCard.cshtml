@model SitefinityWebApp.Mvc.Models.CustomCardViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers

<article class="industry-client col-md-6" aria-label="Fulton Bank">
    <div class="wrapper">
        <div class="photo" style="background-image:url('@Model.SelectedSizeUrl');">
            <div class="client-logo"><img src="@Model.ImageTwoUrl" alt="@Model.ImageTwoAlternativeText" title="@Model.ImageTwoTitle"></div>
        </div>

        <h2 class="title">@Model.Heading</h2>
        <div class="description">
            @Html.HtmlSanitize(Model.Description)
        </div>
        @if (!Model.ActionName.IsNullOrEmpty())
        {

            <div class="cta">
                <a href="@Model.ActionUrl" class="btn btn-primary" target="@Model.ActionTarget" title="@Model.ActionTitle">@Model.ActionName</a>
            </div>
        }
        </div>
</article>