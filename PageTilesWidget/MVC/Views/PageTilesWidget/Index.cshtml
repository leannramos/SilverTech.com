@using Telerik.Sitefinity.Web;

@model SiteMapNodeCollection


<section class="inner-tiles" aria-label="Inner Tiles">
     @if (Model == null || Model.Count == 0)
        {
            <div class="title"><h3>No content to display in this section</h3></div>
        }
        else
        {
        <div class="container">
            <div class="row">

               @foreach (PageSiteNode node in Model)
               {
                   if (node.IsPublished())
                   { 
                    <article class="tile col-md-4">
                        <div class="box">
                            <div class="content">

                                <h2 class="title">@node.Title</h2>

                                <div class="divider">
                                    <span class="line"></span>
                                    <span class="pineapple"><img src="/ResourcePackages/ST/library/img/pineappleSmall.png" alt="Pineapple Icon" role="presentation"></span>
                                    <span class="line"></span>
                                </div>
                                
                                <div class="blurb">
                                    @node.GetCustomFieldValue("TileDescription")
                                </div>

                                <div class="cta">
                                    <a href="@Url.Content(node.Url)" title="Learn More About @node.Title">Learn More About @node.Title</a>
                                </div>

                            </div>
                        </div>
                    </article>
                   }
               }

                </div>
        </div>
            
        }
    </section>